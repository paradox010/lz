{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "CommonJS",
    "outDir": "lib",
    "declaration": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es6",
    "lib": ["dom", "es2017"],
    "skipLibCheck": true,
    "isolatedModules":false
  },
  "exclude": ["node_modules","templates"]
}