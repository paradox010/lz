{
  "compilerOptions": {
    "baseUrl": "./",
    // "paths": {
    //   "lib": ["src/*"]
    // },
    "sourceMap": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es6",
    "lib": ["dom", "es2017"],
    "skipLibCheck": true,
    "isolatedModules":false
  },
  "include": [
    "./src/*.ts"
  ]
}